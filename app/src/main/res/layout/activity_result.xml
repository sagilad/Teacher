<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/board2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.giladsagi.privateteacher.ResultActivity" >

    <ListView
        android:id="@+id/listViewSujects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/text_city"
        android:layout_marginTop="50dp" >

    </ListView>

    <TextView
        android:id="@+id/emailTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="Showing result for "
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/text_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/emailTo"
        android:layout_alignBottom="@+id/emailTo"
        android:layout_toRightOf="@+id/emailTo"
        android:text="@string/subject"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/scoreAvil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_subject"
        android:layout_alignBottom="@+id/text_subject"
        android:layout_toRightOf="@+id/text_subject"
        android:text=" teachers at "
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/text_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/scoreAvil"
        android:layout_alignBottom="@+id/scoreAvil"
        android:layout_toRightOf="@+id/scoreAvil"
        android:text="@string/city"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/teacherName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/emailTo"
        android:layout_marginTop="14dp"
        android:text="Sort By: "
        android:textColor="@color/white" />

    <Button
        android:id="@+id/button_price"
        style="@style/Base.Widget.AppCompat.ActionButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/teacherName"
        android:layout_alignBottom="@+id/teacherName"
        android:layout_toRightOf="@+id/teacherName"
        android:onClick="SortByPrice"
        android:text="Price"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/button_Rating"
        style="@style/Base.Widget.AppCompat.ActionButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/button_price"
        android:layout_alignBottom="@+id/button_price"
        android:layout_toRightOf="@+id/button_price"
        android:onClick="SortByRating"
        android:text="Rating"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/button_Age"
        style="@style/Base.Widget.AppCompat.ActionButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/button_Rating"
        android:layout_alignBottom="@+id/button_Rating"
        android:layout_toRightOf="@+id/button_Rating"
        android:onClick="SortByAge"
        android:text="Age"
        android:textColor="@color/white" />

</RelativeLayout>
