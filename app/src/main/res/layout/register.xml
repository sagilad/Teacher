<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/ContractHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="@string/register1"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/allContract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ContractHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="@string/register2"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonNo"
        style="@style/Base.Widget.AppCompat.ActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ContractHeader"
        android:layout_below="@+id/allContract"
        android:layout_marginTop="24dp"
        android:text="לא"
        android:layout_marginRight="20dp"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonYes"
        style="@style/Base.Widget.AppCompat.ActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonNo"
        android:layout_alignBottom="@+id/buttonNo"
        android:layout_alignLeft="@+id/ContractHeader"
        android:text="כן"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>
